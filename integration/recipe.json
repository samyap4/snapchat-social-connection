{
  "authorizationURL": "https://accounts.snapchat.com/accounts/oauth2/auth",
  "tokenURL": "https://accounts.snapchat.com/accounts/oauth2/token",
  "permissions": [
    {
      "scope": "https://auth.snapchat.com/oauth2/api/user.external_id",
      "label": "External Id",
      "required": true,
      "default": true
    },
    {
      "scope": "https://auth.snapchat.com/oauth2/api/user.display_name",
      "label": "Display Name",
      "required": false,
      "default": true
    },
    {
      "scope": "https://auth.snapchat.com/oauth2/api/user.bitmoji.avatar",
      "label": "Bitmoji Avatar",
      "required": false,
      "default": true
    }
  ],
  "configuration": [
    {
      "name": "client_id",
      "label": "Client ID",
      "description": "Public unique identifier for this application.",
      "required": true
    },
    {
      "name": "client_secret",
      "label": "Client Secret",
      "description": "Secret for this application.",
      "required": true
    }
  ]
}
